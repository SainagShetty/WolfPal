<!DOCTYPE html>
<html>
<head>
  <title>WolfPal</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<%= render "layouts/navbar" %>
<div class="container">
  <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
  <% end %>
</div>

<% if not student_signed_in? %>
    <%= yield :top_content %>
<% else %>
    <div id='leftFrame'>
      <%= yield :left_content %>
    </div>

    <div id='rightFrame'>
      <%= yield :right_content %>
    </div>
<% end %>

<div class="container">
  <h1><%= yield :header %></h1>
  <%= yield %>
</div>
</body>
</html>

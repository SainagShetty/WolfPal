<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table>
  <thead>
    <tr>
      <th>Semester</th>
      <th>Day</th>
      <th>Time</th>
      <th>Project</th>
      <th>Fieldwork</th>
      <th>Ratings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.semester %></td>
        <td><%= schedule.day %></td>
        <td><%= schedule.time %></td>
        <td><%= schedule.project %></td>
        <td><%= schedule.fieldwork %></td>
        <td><%= schedule.ratings %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

